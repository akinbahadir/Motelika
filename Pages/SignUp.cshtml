@page
@model Motelika.Pages.SignUpModel
@{
}

<body ng-controller="Signup_Controller" class="backgrounded pace-running ng-scope" otelika-ready="">
    <div class="pace pace-active">
        <div class="pace-progress" style="width: 99.8589%;" data-progress-text="99%" data-progress="99">
            <div class="pace-progress-inner"></div>
        </div>
        <div class="pace-activity"></div>
    </div>
    <div id="signup_page">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 text-center">
                <div id="signup_progress"></div>
                <a href="https://kant.ist" target="_blank">
                    <img alt="Kant Logo" id="kant_logo" src="https://kant.ist/assets/images/logo/kant-black.svg">
                </a>
            </div>
        </div>
        <div id="signup_content">
